<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="38px"
        android:layout_height="76px"
        android:layout_marginStart="63px"
        android:layout_marginLeft="63px"
        android:layout_marginTop="110px"
        android:background="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="338px"
        android:layout_height="103px"
        android:layout_marginStart="98px"
        android:layout_marginLeft="98px"
        android:layout_marginTop="97px"
        android:lineSpacingExtra="40px"
        android:text="아이디 찾기"
        android:textColor="#242424"
        android:textSize="70px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="703px"
        android:layout_height="0dp"
        android:layout_marginStart="101px"
        android:layout_marginLeft="101px"
        android:layout_marginTop="138px"
        android:layout_marginBottom="565dp"
        android:lineSpacingExtra="20px"
        android:text="회원정보에 등록한\n휴대전화로 인증"
        android:textColor="#242424"
        android:textSize="90px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="textView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="977px"
        android:layout_height="302px"
        android:layout_marginStart="101px"
        android:layout_marginLeft="101px"
        android:layout_marginTop="44px"
        android:lineSpacingExtra="55px"
        android:text="회원정보에 등록한 휴대전화 번호와\n입력한 휴대전화 번호가 같아야, \n인증번호를 받을 수 있습니다."
        android:textColor="#737373"
        android:textSize="55px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>