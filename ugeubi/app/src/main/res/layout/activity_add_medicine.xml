<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27.5dp"
        android:layout_marginHorizontal="15.8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_back"
            android:layout_width="9.5dp"
            android:layout_height="19dp"
            android:src="@drawable/btn_back" />


        <ImageView
            android:id="@+id/btn_ok"
            android:layout_gravity="center_vertical|right"
            android:layout_width="21.8dp"
            android:layout_height="16dp"
            android:src="@drawable/btn_check" />

    </FrameLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textSize="15.5sp"
        android:textColor="#040404"
        android:text="약 이름"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/medicine_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="6.3dp"
        android:textColor="#040404"
        android:paddingLeft="20dp"
        android:background="@drawable/bg_search_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.3dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textSize="15.5sp"
        android:textColor="#040404"
        android:text="약 종류"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/medicine_name"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/medicine_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:layout_width="82.3dp"
                android:layout_height="32dp"
                android:text="알약"
                android:textColor="@drawable/durtype_togglebtn_textcolor"
                android:background="@drawable/durtype_togglebtn"
                android:button="@drawable/durtype_togglebtn"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/durtype_togglebtn"
                android:textOn="범용금기"
                android:textOff="범용금기"
                android:textSize="10dp"
                android:textColor="@drawable/durtype_togglebtn_textcolor" />


            <RadioButton
                android:layout_width="82.3dp"
                android:layout_height="32dp"
                android:text="물약"
                android:textColor="@drawable/durtype_togglebtn_textcolor"
                android:background="@drawable/durtype_togglebtn"
                android:button="@drawable/durtype_togglebtn"/>

            <RadioButton
                android:layout_width="82.3dp"
                android:layout_height="32dp"
                android:text="가루약"
                android:textColor="@drawable/durtype_togglebtn_textcolor"
                android:background="@drawable/durtype_togglebtn"
                android:button="@drawable/durtype_togglebtn"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:layout_width="82.3dp"
                android:layout_height="32dp"
                android:background="@drawable/durtype_togglebtn"
                android:button="@drawable/durtype_togglebtn"
                android:text="연고"
                android:textColor="@drawable/durtype_togglebtn_textcolor" />

            <RadioButton
                android:layout_width="82.3dp"
                android:layout_height="32dp"
                android:background="@drawable/durtype_togglebtn"
                android:button="@drawable/durtype_togglebtn"
                android:text="처방약"
                android:textColor="@drawable/durtype_togglebtn_textcolor" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>