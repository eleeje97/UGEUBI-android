<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_alarm_2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ugeubi_logo"
        android:layout_width="91dp"
        android:layout_height="29.3dp"
        android:layout_marginTop="22.8dp"
        android:src="@drawable/ugeubi_bar_icon"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="25dp"
        android:text="알림"
        android:textColor="#4b4949"
        android:textSize="17.5sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/alarm_default"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="32.8dp"
        android:layout_marginRight="15dp"
        android:elevation="5dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/alarm_shape"
        android:orientation="vertical" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="35dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/dose_icon"
                android:layout_width="34.2dp"
                android:layout_height="34.2dp"
                android:layout_marginRight="8.1dp"
                android:src="@drawable/logo_splash"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요 우급이입니다."
                    android:textColor="#262626" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="회원님의 가입을 환영합니다!"
                    android:textColor="#262626" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/dday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당일"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="13.5dp"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alarmlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.8dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="30dp" />
</LinearLayout>