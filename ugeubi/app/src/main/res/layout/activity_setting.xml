<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ugeubi_logo"
        android:layout_width="91dp"
        android:layout_height="29.3dp"
        android:layout_marginTop="22.8dp"
        android:src="@drawable/ugeubi_bar_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="24.5dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:text="계정 관리"
        android:textStyle="bold"
        android:textColor="#040404"
        android:textSize="15.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ugeubi_logo" />

    <View
        android:id="@+id/horizontal_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="#45BA8E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <LinearLayout
        android:id="@+id/profile_box"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/profile_box_shape"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_bar"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/icon_user"
            android:layout_marginStart="25dp" />

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/username_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#2f2d33"
                android:textStyle="bold"
                android:text="이다은 (eleeje97)" />

            <TextView
                android:id="@+id/useremail"
                android:layout_marginTop="3.3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#737373"
                android:text="eleeje97@naver.com" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_box">

        <LinearLayout
            android:id="@+id/change_password_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22.3dp"
                android:text="비밀번호 변경"
                android:layout_marginLeft="30dp"
                android:textColor="#262c29"
                android:textSize="15sp"
                android:layout_marginStart="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center_vertical" >
                <ImageView
                    android:layout_marginRight="30dp"
                    android:layout_width="9.5dp"
                    android:layout_height="22.3dp"
                    android:src="@drawable/btn_back"
                    android:rotation="180" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22.3dp"
                android:text="로그아웃"
                android:layout_marginLeft="30dp"
                android:textColor="#262c29"
                android:textSize="15sp"
                android:layout_marginStart="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center_vertical" >
                <ImageView
                    android:layout_marginRight="30dp"
                    android:layout_width="9.5dp"
                    android:layout_height="22.3dp"
                    android:src="@drawable/btn_back"
                    android:rotation="180" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:text="앱 정보"
        android:textStyle="bold"
        android:textColor="#040404"
        android:textSize="15.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <View
        android:id="@+id/horizontal_bar2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="#45BA8E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_bar2">

        <LinearLayout
            android:id="@+id/app_version_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22.3dp"
                android:text="앱 버전"
                android:layout_marginLeft="30dp"
                android:textColor="#262c29"
                android:textSize="15sp"
                android:layout_marginStart="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center_vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12.5sp"
                    android:textColor="#737373"
                    android:text="1.0.0"
                    android:layout_marginRight="30dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/developer_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22.3dp"
                android:text="개발자 정보"
                android:layout_marginLeft="30dp"
                android:textColor="#262c29"
                android:textSize="15sp"
                android:layout_marginStart="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/opensource_license"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22.3dp"
                android:text="오픈소스 라이센스"
                android:layout_marginLeft="30dp"
                android:textColor="#262c29"
                android:textSize="15sp"
                android:layout_marginStart="30dp" />

        </LinearLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>