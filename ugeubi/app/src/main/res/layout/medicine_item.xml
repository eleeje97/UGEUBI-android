<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="265dp"
    android:background="@drawable/medicine_kit_item_clicked"
    android:layout_marginHorizontal="15.5dp"
    android:layout_marginVertical="30dp"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/period"
        android:layout_width="18.5dp"
        android:layout_height="18.5dp"
        android:src="@drawable/triangle"
        android:layout_marginRight="19dp"
        android:layout_marginTop="13dp"
        android:layout_gravity="right" />

    <ImageView
        android:id="@+id/medicine_icon"
        android:layout_width="50dp"
        android:layout_height="78dp"
        android:src="@drawable/medicine_icon_pill1"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타이레놀"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"/>

    <TextView
        android:id="@+id/medicine_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생리통, 두통, 해열"
        android:textColor="@color/black"
        android:textSize="12.5sp"
        android:layout_marginBottom="45dp"
        android:layout_gravity="center"/>



</LinearLayout>